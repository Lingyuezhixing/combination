<resources>

    <!--定义主题使用parent引用我们自定义的AppTheme.Base主题-->
    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppThemeRed" parent="AppTheme.Base">
        <item name="colorPrimary">@color/red_theme</item>
        <item name="colorPrimaryDark">@color/red_theme</item>
    </style>

    <style name="AppThemeMaterial" parent="AppTheme.Base">
        <item name="colorPrimary">@color/material_theme</item>
        <item name="colorPrimaryDark">@color/material_theme</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Actionbar color -->
        <item name="colorPrimary">@color/blue_theme</item>
        <!--Status bar color-->
        <item name="colorPrimaryDark">@color/blue_theme</item>
        <!--Window color-->
        <item name="android:windowBackground">@color/dim_foreground_material_dark</item>
        <!--返回键样式-->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>

    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">

    </style>

    <style name="FullBleedTheme" parent="android:Theme.Light.NoTitleBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ActionBarTheme" parent="android:Theme.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Transparent" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>
</resources>